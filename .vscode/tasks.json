    "version": "2.0.0",
    "tasks": [
        {
            "label": "Zig build",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "command": "zig",
            "args": ["build"],
            "problemMatcher": "$gcc"
        }
    ]
}